root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,js,php}]
indent_style = space

[*.{json,css,less,sass,scss,yml}]
indent_size = 2
indent_style = space

[*.{Dockerfile,conf,vhost}]
indent_size = 2
indent_style = space

[*.{md,txt}]
end_of_line = crlf
trim_trailing_whitespace = false
